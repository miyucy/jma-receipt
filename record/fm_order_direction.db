fm_order_direction {
	context	int;
	object	object;
	mode	int;
	recordname	varchar(128);
	data {
#---    指示箋
		Form_ID				varchar(30);
		Custom_ID			varchar(30);
		Printer				varchar(20);
 		Perform_Date			varchar(10);
 		Perform_Time			varchar(5);
#---    指示日
		IssuedDate			varchar(10);
		Department_Code			varchar(02);
		Department_Name			varchar(40);
		Ward_Number			varchar(02);
		Ward_Name			varchar(20);
		Room_Number			varchar(6);
		Patient	{
			ID	 		varchar(20);
			Name 			varchar(50);
			KanaName  		varchar(50);
			BirthDate 		varchar(10);
			Sex			varchar(1);
			Age			varchar(8);
		};
		Doctor	{
			Code			varchar(5);
			Name 			varchar(50);
			KanaName 		varchar(50);
			Drug_Permission_ID	varchar(15);
		};
#---    帳票タイトル
		Title    			varchar(30);
#---    実施日
		Medical_Date			varchar(10);
#---    診療区分
		Medical_Class_Group		varchar(02);
		Rp	{
#---                    回数
			Count				varchar(3);
#---                    回数名称
			Unit_Name			varchar(6);
			Medication	{
				Name			varchar(200);
				Amount			varchar(12);
#---                            単位
				Unit_Name		varchar(12);
				Code			varchar(9);
			}[50];
		}[50];
		Memo				varchar(110)[3];
		Operator_ID			varchar(16);
	};
};
