path	del2 	{
	DBDELETE	{
		DELETE
		FROM tbl_sryacct_sub
		WHERE (HOSPNUM,PTID,ZAINUM) in (
		SELECT HOSPNUM,PTID,ZAINUM
		FROM tbl_sryacct_main
			WHERE   HOSPNUM    =   :HOSPNUM
			AND   NYUGAIKBN   =    :VNYUGAIKBN
			AND   PTID        =    :PTID
		);
	};
};

path    del3    {
