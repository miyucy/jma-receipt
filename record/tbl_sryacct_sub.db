};

path    del    {
        DBDELETE        {
                DELETE
		FROM tbl_sryacct_sub
		WHERE HOSPNUM =   :HOSPNUM
		AND   PTID    =   :PTID
		AND   ZAINUM  =   :ZAINUM
		;
        };
};

path	del1 	{
