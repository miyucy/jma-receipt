path	key9	{
	DBSELECT	{
		DECLARE tbl_ptinf_key9_csr CURSOR FOR
		SELECT *
		FROM tbl_ptinf
			WHERE ( HOSPID    =   :HOSPID )  AND
                              ( BIRTHDAY  LIKE  :BIRTHDAY )
