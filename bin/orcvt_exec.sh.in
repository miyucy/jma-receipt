#!/bin/sh

if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV" ; then
    exit 0
fi

. $JMARECEIPT_ENV
export COB_LIBRARY_PATH="$PATCHLIBDIR":"$ORCALIBDIR":/usr/lib/panda:/usr/lib/open-cobol

if [ $# -ne 2 ]; then
    echo
    echo "オプションが正しくありません"
    echo
    exit 1
fi

if [ ! -e "$2" ]; then
    echo
    echo "$2 ファイルが存在しません"
    echo
    exit 1
fi

cd $exec_prefix

$DBSTUB -dir "$LDDEFDIR"/directory -bd orcabt $1 -parameter $2
