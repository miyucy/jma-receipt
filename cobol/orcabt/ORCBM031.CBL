           MOVE    "DBSELECT"          TO  MCP-FUNC
           MOVE    "SRYACCT-KEY7"      TO  ORC-DBPATH
           CALL    "ORCMCPSUB"         USING
                                       MCPAREA
                                       ORCMCPAREA
                                       MCPDATA-REC
           IF          MCP-RC          =   ZERO
               MOVE    "SRYACCT-KEY7"      TO  ORC-DBPATH
               PERFORM 900-ACCT-DBFETCH-SEC
           ELSE
               MOVE    1                   TO  FLG-SRYACCT
           END-IF
