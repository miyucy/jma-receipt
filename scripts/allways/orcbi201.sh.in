#!/bin/bash

if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV

#-------------------------------------------#
#    入院患者検索結果一覧出力
#        $1  処理区分
#        $2  CSVファイル名
#        $3  パラメータファイル名
#        $4  TERMID
#        $5  SYSYMD
#        $6  SYSDATE
#        $7  HOSPNUM
#        $8  STAFFCD
#        $9  ジョブＩＤ
#        $10 シェルＩＤ
#        $11 ファイル出力先 1:client
#        $12 文字コード区分 1:euc 2:s-jis
#        $13 FILENM FOLDER
#        $14 FILENM 
#        $15 WKCSVファイル名
#
#-------------------------------------------#

        LOG_FILE="/var/log/jma-receipt/${7}orcbi201.log"

PARA_FILE_BASE=$3
PARA_FILE_FULL=${MCP_TEMPDIR}/${3}

WKCSV_FILE_BASE=${15}
WKCSV_FILE_FULL=${MCP_TEMPDIR}/${WKCSV_FILE_BASE}


        $DBSTUB -dir $LDDIRECTORY -bd orcabt ORCBI201 -parameter ${PARA_FILE_BASE},$4,$5,$6,$7,$8,${11},${13},${14},${WKCSV_FILE_BASE} >> $LOG_FILE 2>&1

##      ＣＳＶファイル作成
        if  [ $1 -eq "0" ]; then
            if  [ -e ${WKCSV_FILE_FULL} ]; then
                awk ' {
                #     行頭の空白を取り除く
                      sub(/^ */,"");
                #     行末の空白を取り除く
                      sub(/ *$/,"");
                #     カンマの後の空白を取り除く
                      gsub(/, */,",");
                #     カンマの前の空白を取り除く
                      gsub(/ *,/,",");
                      print $0
                }'  ${WKCSV_FILE_FULL} > ${2}.tmp

                if   [ ${11} = '1' ]; then
#                   クライアント保存のとき固定ファイルに文字コード変換（ＥＵＣからＳ−ｊｉｓ）
                    if  [ ${12} = '2' ]; then
                        nkf -s -Lw ${2}.tmp > ${WKCSV_FILE_FULL}
                        rm  ${2}.tmp
                    else 
                        mv  ${2}.tmp ${WKCSV_FILE_FULL}
                    fi
                else
                    mv  ${2}.tmp $2
                    rm  ${WKCSV_FILE_FULL}
                fi 
            fi
        fi

##      パラメータファイル削除
        if  [ -e ${PARA_FILE_FULL} ]; then
            rm  ${PARA_FILE_FULL}
        fi

       $DBSTUB -dir $LDDIRECTORY -bd orcabt ORCBJOB -parameter JBE$9${10},$7 >> $LOG_FILE 2>&1
        exit
