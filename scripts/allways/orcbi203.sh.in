#!/bin/bash

if test -z "$JMARECEIPT_ENV" ; then
    JMARECEIPT_ENV="@jma-receipt-env@"
fi
if ! test -f "$JMARECEIPT_ENV"; then
    exit 0
fi

. $JMARECEIPT_ENV

#-------------------------------------------#
#        病棟別入院患者一覧表出力
#        $1  処理区分
#        $2  CSVファイル名
#        $3  未使用
#        $4  TERMID
#        $5  SYSYMD
#        $6  未使用
#        $7  HOSPNUM
#        $8  STAFFCD
#        $9  ジョブＩＤ
#        $10 シェルＩＤ
#        $11 ファイル出力先 1:client
#        $12 文字コード区分 1:euc 2:s-jis
#        $13 FILENM FOLDER
#        $14 FILENM 
#        $15 WKCSVファイル名
#        $16 KEY日付(DB検索用）
#        $17 KEY時刻(DB検索用）
#        $18 期間開始日
#        $19 期間終了日
#
#-------------------------------------------#

        LOG_FILE="/var/log/jma-receipt/${7}orcbi203.log"


WKCSV_FILE_BASE=${15}
WKCSV_FILE_FULL=${MCP_TEMPDIR}/${WKCSV_FILE_BASE}


        $DBSTUB -dir $LDDIRECTORY -bd orcabt ORCBI203 -parameter $1,$4,$5,$6,$7,$8,$9,${10},${11},${13},${14},${WKCSV_FILE_BASE},${16},${17},${18},${19} > $LOG_FILE 2>&1

##      ＣＳＶファイル作成
        if  [ $1 -eq "0" ]; then
            if  [ -e ${WKCSV_FILE_FULL} ]; then
                awk ' {
                #     行頭の空白を取り除く
                      sub(/^ */,"");
                #     行末の空白を取り除く
                      sub(/ *$/,"");
                #     カンマの後の空白を取り除く
                      gsub(/, */,",");
                #     カンマの前の空白を取り除く
                      gsub(/ *,/,",");
                      print $0
                }'  ${WKCSV_FILE_FULL} > ${2}.tmp

#                クライアント保存のとき固定ファイルに文字コード変換（ＥＵＣからＳ−ｊｉｓ）
                if  [ ${12} = '2' ]; then
                    nkf -s -Lw ${2}.tmp > ${2}
                    rm  ${2}.tmp
                else 
                    mv  ${2}.tmp ${2}
                fi

                if   [ ${11} = '1' ]; then
                    mv  ${2} ${WKCSV_FILE_FULL}
                fi
            fi
        fi

       $DBSTUB -dir $LDDIRECTORY -bd orcabt ORCBJOB -parameter JBE$9${10},$7 >> $LOG_FILE 2>&1
        exit
